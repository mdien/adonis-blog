        <div class="form-group">
            <label>Body</label>
            <textarea name="body" class="form-control">{{ post.body }}</textarea>
            {{ elIf('<span class="text-danger">$self</span>', getErrorFor('body'), hasErrorFor('body')) }}
        </div>
        <button class="btn btn-primary" type="submit">Add</button>
    </form>


